{
  "name": "Ship Tickets Extension",
  "description": "Building forms",
  "version": "0.9.2",
  "manifest_version": 3,
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "/js/background.js"
  },
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "scripting",
    "declarativeContent",
    "notifications"
  ],
  "content_security_policy": {
    "content": "default-src 'self'  data: gap: https://cdnjs.cloudflare.com 'unsafe-eval' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; media-src *; img-src 'self' data: content:;",
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "action": {
    "default_popup": "/html/popup.html",
    "default_icon": {
      "16": "/images/16.png",
      "32": "/images/32.png",
      "48": "/images/48.png",
      "128": "/images/128.png"
    }
  },
  "icons": {
    "16": "/images/16.png",
    "32": "/images/32.png",
    "48": "/images/48.png",
    "128": "/images/128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://*.utl.gov.in/*"],
      "js": ["/js/content-script.js"],
      "run_at": "document_start"
    }
  ]
}
